#!/bin/bash

download()
{
	git_clone_update git://git.kernel.org/pub/scm/utils/cpu/mce/mce-test.git
	git_clone_update git://git.kernel.org/pub/scm/utils/cpu/mce/mce-inject.git
	# keep it in the last to set the effective source_dir
	git_clone_update https://github.com/linux-test-project/ltp.git
}

build()
{
	cd /tmp/mce-test
	patch_source

	make -C /tmp/mce-test
	make -C /tmp/mce-inject
}

install()
{
	cd /tmp/mce-test
	make install
	cp -af * $BM_ROOT

	cd /tmp/mce-inject
	make install
	cp -af /tmp/mce-inject/mce-inject $BM_ROOT

	cp -af /tmp/ltp $BM_ROOT
}

pack()
{
	{
		echo /usr
		echo /usr/sbin
		echo /usr/sbin/mce-inject
		echo /lkp
		echo /lkp/benchmarks
		echo /lkp/benchmarks/$BM_NAME
		find /lkp/benchmarks/$BM_NAME/*
	} |
	cpio --quiet -o -H newc --owner=root.root | gzip -n -9 > /lkp/benchmarks/${BM_NAME}.cgz
	[[ $arch ]] && mv "/lkp/benchmarks/${BM_NAME}.cgz" "/lkp/benchmarks/${BM_NAME}-${arch}.cgz"
}
