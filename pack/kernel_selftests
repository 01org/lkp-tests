#!/bin/bash

download()
{
	[[ -d linux ]] || git clone --depth 1 --reference /c/linux http://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git
	source_dir="linux"
}

build()
{
	cd $source_dir
	make allyesconfig
	make prepare
	cd tools/testing/selftests
	make
}

install()
{
	cp -af * $BM_ROOT
}
