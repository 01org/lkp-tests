#!/usr/bin/env ruby

require 'optparse'
require 'ostruct'
require 'fileutils'

ENV["LKP_SRC"] ||= File.dirname File.dirname File.realpath $PROGRAM_NAME
LKP_SRC = ENV["LKP_SRC"] || File.dirname(File.dirname File.realpath $PROGRAM_NAME)
