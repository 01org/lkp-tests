#!/bin/sh -e

. $LKP_SRC/lib/env.sh

scaling_governor=$1
[ -n "$scaling_governor" ] || exit 0

is_virt && exit 0

note "
for file in /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor
do
	echo $scaling_governor > \$file
done
"

for file in /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor
do
	echo $scaling_governor > $file
done
