#!/usr/bin/awk -f

# procs -----------memory---------- ---swap-- -----io---- -system-- ----cpu----
#  r  b   swpd   free   buff  cache   si   so    bi    bo   in   cs us sy id wa

BEGIN {
	items = "time procs.r procs.b memory.swpd memory.free memory.buff memory.cache swap.si swap.so io.bi io.bo system.in system.cs cpu.us cpu.sy cpu.id cpu.wa"
	n = split(items, item_list)
}

NR > 2 {
	for(i = 1; i <= n; i++) {
		print item_list[i]": "$i
	}
}
