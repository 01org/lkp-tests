#!/usr/bin/env ruby

RESULT_ROOT = ENV['RESULT_ROOT']

Dir["#{RESULT_ROOT}/**/*.csv"].each { |log|
	File.readlines(log).each do |line|
		if line =~ /(^LTP|^DDT)_[a-zA-Z0-9]+\;.+\;.*\;\d?\;\d?\;\d?\;$/
			result = line.split(";")
			if result[3] == "1"
				puts "#{result[0]}.#{result[1]}.fail: 0"
			else
				puts "#{result[0]}.#{result[1]}.fail: 1"
			end
		end
	end
}
