#!/bin/sh
# - number
# - trans
# - subdirs

[ -z "$mount_points" ] && exit
location="${mount_points%% *}"
number=${number%n}
trans=${trans%s}
subdirs=${subdirs%d}

cmd postmark <<EOF
set size 10000 20000
set number $number
set transactions $trans
set subdirectories $subdirs
set location $location
set report terse
show
run
EOF
