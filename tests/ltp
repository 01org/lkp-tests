#!/bin/bash
# - test

cd $BENCHMARK_ROOT/ltp || exit

if [[ $test = "dio" ]]; then
	[[ ! "$mount_points" ]] && exit
	export TMPDIR=$(echo $mount_points | cut -d' ' -f1)
fi

cmd ./runltp -f $test

mkdir $RESULT_ROOT/ltp-results
chmod g+w	$BENCHMARK_ROOT/ltp/{results,output}/*
chown lkp.lkp	$BENCHMARK_ROOT/ltp/{results,output}/*
cp -a		$BENCHMARK_ROOT/ltp/{results,output}/* $RESULT_ROOT/ltp-results
