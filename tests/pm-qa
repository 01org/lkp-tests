#!/bin/bash
# - test

cd $BENCHMARK_ROOT/pm-qa/$test || exit

[[ $test == cpuhotplug ]] &&
ext_opt="hotplug_allow_cpu0=0"

cmd make $ext_opt run_tests

ls $BENCHMARK_ROOT/pm-qa/$test/*.log &>/dev/null && {
	chmod g+w	$BENCHMARK_ROOT/pm-qa/$test/*.log
	chown lkp.lkp	$BENCHMARK_ROOT/pm-qa/$test/*.log
	cp -a		$BENCHMARK_ROOT/pm-qa/$test/*.log $RESULT_ROOT/
}
