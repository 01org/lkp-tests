#!/bin/sh
# - runtime
# - seed

. $LKP_SRC/lib/reproduce-log.sh

## A Linux System call fuzz tester

[ -n "$seed" ] || {
	echo Seeding trinity based on $kconfig
	seed=$(echo $kconfig | cksum)
	seed=${seed%% *}
}

# suppress "Killed" message to stderr
set +m

cd /tmp
log_cmd chroot --userspec nobody:nogroup / trinity -q -q -l off -s $seed -x get_robust_list -x remap_file_pages -N 999999999 2>&1 &

pid=$!
sleep $runtime

kill -9 $pid
