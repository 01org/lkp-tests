#!/usr/bin/ruby

MAX_COLS = 100

LKP_SRC = ENV["LKP_SRC"] || File.dirname(File.dirname File.realpath $PROGRAM_NAME)

require "#{LKP_SRC}/lib/job.rb"

$result_root = ARGV[0] || ENV["RESULT_ROOT"]
if not File.directory? $result_root
	STDERR.puts "#{$result_root} is not a directory"
	exit 1
end

$params_root  = File.dirname File.dirname File.dirname File.dirname $result_root
$params_file  = $params_root + '/params.yaml'

if File.exist? $params_file and Time.now - File.ctime($params_root) > 3600
	# no need to update params
	exit 0
end

params = {}
params = YAML.load_file($params_file) if File.exists? $params_file

job = Job.new
job.load($result_root + '/job.yaml') or exit

job.each_param { |k, v|
	if params[k]
		if not params[k].include? v
			params[k] << v
		end
	else
		params[k] = [ v ]
	end
}

atomic_save_yaml params, $params_file
